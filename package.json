{
  "name": "jydgeotrack-backend",
  "version": "1.0.0",
  "description": "Backend oficial de JD GeoTrack (Node.js + Fastify + TypeScript)",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "clean": "rimraf dist",
    "check:types": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "jsonwebtoken": "^9.0.3",
    "mysql2": "^3.11.0",
    "nodemailer": "^7.0.12"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "@types/nodemailer": "^7.0.4",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.17.0 <23"
  },
  "files": [
    "dist",
    ".env.production",
    "package.json",
    "package-lock.json"
  ],
  "license": "MIT",
  "author": "Real Academy FC <rodrigo.lagos.fernandez@gmail.com>"
}
